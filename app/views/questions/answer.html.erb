<h1>Stupid Coaching</h1>

<div class="card">
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @question %></p>
      <footer class="blockquote-footer"><cite>You</cite></footer>
    </blockquote>
  </div>
</div>

<div class="card answer">
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @answer %></p>
      <footer class="blockquote-footer"><cite>Your Coach</cite></footer>
    </blockquote>
  </div>
</div>

<button type="button" class="btn btn-outline-info"><%= link_to "Ask a new question", ask_path %></button>
